<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="{{ asset('pictures/favicon.ico') }}" type="image/x-icon">
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
              crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <link rel="stylesheet" href="{{ asset('styles/style.css') }}">
    {% endblock %}
</head>
<body>
<ul class="nav justify-content-end shadow">
    {% if app.user %}
        <li>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-outline-success m-2" data-bs-toggle="modal"
                    data-bs-target="#chessModal">
                New chess
            </button>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-outline-warning m-2" data-bs-toggle="modal"
                    data-bs-target="#checkersModal">
                New checkers
            </button>
        </li>
        <li class="nav-item">
            <a href="/" class="btn btn-outline-primary m-2">Game list</a>
        </li>
        <li class="nav-item">
            <a href="/logout" class="btn btn-outline-danger m-2">Exit</a>
        </li>
    {% endif %}
</ul>

<!-- Modal -->
<div class="modal fade" id="chessModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content p-2">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Set the game</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" action="/create">
                <div class="m-2 d-block">
                    <div id="chess-strategy">
                        <div class="form-check my-2">
                            <input class="form-check-input" type="radio" name="strategy" id="chess-computer-strategy"
                                   value="1">
                            <label class="form-check-label" for="chess-computer-strategy">
                                With computer
                            </label>
                        </div>
                        <div class="d-flex d-none" id="chess-complexity">
                            <div>Complexity:</div>
                            <div class="form-check mx-2">
                                <input class="form-check-input" type="radio" name="complexity" id="complexity1"
                                       value="3" checked>
                                <label class="form-check-label" for="complexity1">
                                    low
                                </label>
                            </div>
                            <div class="form-check mx-2">
                                <input class="form-check-input" type="radio" name="complexity" id="complexity2"
                                       value="6" checked>
                                <label class="form-check-label" for="complexity2">
                                    middle
                                </label>
                            </div>
                            <div class="form-check mx-2">
                                <input class="form-check-input" type="radio" name="complexity" id="complexity3"
                                       value="9" checked>
                                <label class="form-check-label" for="complexity3">
                                    hard
                                </label>
                            </div>
                        </div>
                        <div class="form-check my-2">
                            <input class="form-check-input" type="radio" name="strategy" id="multiplayer-strategy"
                                   value="2" checked>
                            <label class="form-check-label" for="multiplayer-strategy">
                                With other player
                            </label>
                        </div>
                    </div>
                    <div class="d-flex m-2">
                        <button type="button" class="btn btn-light shadow team-button">
                            <input class="form-check-input" type="radio" name="player" value="white" id="whiteRadio"
                                   hidden="hidden">
                            <img class="w-25" src="{{ asset('pictures/white.png') }}" alt="white">
                            <label class="form-check-label" for="whiteRadio">

                            </label>
                        </button>
                        <button type="button" class="btn btn-light shadow team-button">
                            <input class="form-check-input" type="radio" name="player" value="black" id="blackRadio"
                                   hidden="hidden">
                            <img class="w-25" src="{{ asset('pictures/black.png') }}" alt="black">
                            <label class="form-check-label" for="blackRadio">

                            </label>
                        </button>
                    </div>
                    <input type="hidden" name="type" value="2">
                    <p class="text-danger small text-center mt-3" id="alerts"></p>
                </div>
                <div class="modal-footer row d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger" id="save">Create new game</button>
                </div>
            </form>
        </div>
    </div>
</div>

