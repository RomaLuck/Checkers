                    <div class="d-flex m-2">
                        <button type="button" class="btn btn-light shadow team-button">
                            <input class="form-check-input" type="radio" name="player" value="white" id="whiteRadio"
                                   hidden="hidden">
                            <img class="w-25" src="{{ asset('pictures/white.png') }}" alt="white">
                            <label class="form-check-label" for="whiteRadio">

